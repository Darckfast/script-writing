{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "types": [
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": [
        "./src/lib/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "src/lib/functions/wailsjs/**/*"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ]
}