{
  "name": "script-writing",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "dev": "run-p dev:*",
    "dev:vite": "vite",
    "dev:routify": "routify",
    "build": "routify -b && vite build",
    "preview": "vite preview",
    "check": "routify -b && svelte-check --tsconfig ./tsconfig.json",
    "check:ci": "pnpm run check --output machine",
    "coverage": "vitest run --coverage",
    "cy:run": "cypress run --config video=false",
    "cy:open": "cypress open",
    "test:unit": "vitest run --coverage",
    "lint": "biome ci .",
    "format": "biome format --write .",
    "test:e2e": "start-server-and-test dev http://localhost:5177 cy:run",
    "check:bundle": "pnpm run build && pnpm bundlewatch"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@roxi/routify": "^2.18.12",
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node-fetch": "^2.6.5",
    "@types/uuid": "^9.0.4",
    "@vitest/coverage-istanbul": "^0.34.4",
    "autoprefixer": "^10.4.15",
    "bundlewatch": "^0.3.3",
    "cypress": "^13.2.0",
    "daisyui": "^3.7.5",
    "dayjs": "^1.11.9",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.29",
    "start-server-and-test": "^2.0.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.1",
    "svelte-jsoneditor": "^0.18.3",
    "svelte-preprocess": "^5.0.4",
    "svelvet": "^8.1.0",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.4"
  },
  "lint-staged": {
    "*.{js,css,md,svelte,ts}": "rome format . --write"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/**/*.js",
        "maxSize": "500kB"
      }
    ]
  }
}