{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "src-tauri",
      "dist",
      ".routify",
      "docs",
      "public",
      "coverage"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingComma": "es5"
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": [
      "node_modules",
      "src-tauri",
      "dist",
      ".routify",
      "docs",
      "public",
      "coverage"
    ]
  }
}
