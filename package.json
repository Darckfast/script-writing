{
  "name": "script-writing",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "dev": "run-p dev:*",
    "dev:vite": "vite",
    "dev:routify": "routify",
    "build": "routify -b && vite build",
    "preview": "vite preview",
    "check": "routify -b && svelte-check --tsconfig ./tsconfig.json --output=machine",
    "coverage": "vitest run --coverage",
    "cy:run": "cypress run --config video=false",
    "cy:open": "cypress open",
    "test:unit": "vitest run",
    "lint": "rome ci .",
    "test:e2e": "start-server-and-test dev http://localhost:5177 cy:run",
    "td": "tauri dev"
  },
  "devDependencies": {
    "@roxi/routify": "^2.18.12",
    "@sveltejs/vite-plugin-svelte": "^2.4.1",
    "@tauri-apps/api": "^1.3.0",
    "@tauri-apps/cli": "^1.3.1",
    "@tsconfig/svelte": "^4.0.1",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "^10.4.14",
    "cypress": "^12.13.0",
    "daisyui": "^3.0.3",
    "dayjs": "^1.11.8",
    "dropbox": "^10.34.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rome": "12.1.3",
    "start-server-and-test": "^2.0.0",
    "svelte": "^3.59.1",
    "svelte-check": "^3.4.3",
    "svelte-jsoneditor": "^0.17.5",
    "svelte-preprocess": "^5.0.4",
    "svelvet": "^8.0.1",
    "tailwind-scrollbar": "^3.0.4",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.4"
  },
  "lint-staged": {
    "*.{js,css,md,svelte,ts}": "rome format . --write"
  }
}