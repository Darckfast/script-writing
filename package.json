		"tailwind-scrollbar": "^3.0.1",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.4",
		"uuid": "^9.0.0",
		"vite": "^4.3.5",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "^0.31.0"
	},
	"lint-staged": {
