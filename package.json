		"@tsconfig/svelte": "^4.0.1",
		"@types/node-fetch": "^2.6.3",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"autoprefixer": "^10.4.14",
		"cypress": "^12.12.0",
		"daisyui": "^2.51.6",
		"dayjs": "^1.11.7",
